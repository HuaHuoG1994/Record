function IsNumber(oNum) {
  
    var num_temp = oNum.replace('-', '').replace('+', '').replace(' ', '');
    if (num_temp.length <= 0) return true;

    if (!oNum) return false;
    var strP = /^[+-]?\d+[.]?\d*$/;


    if (!strP.test(oNum))
    {
     
        return false;
        }

    try {
        if (parseFloat(oNum) != oNum) {
         
            return false;
        }
    }
    catch (ex) {
        return false;
    }
    return true;
}